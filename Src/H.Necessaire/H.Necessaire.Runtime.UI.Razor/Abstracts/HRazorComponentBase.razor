@using H.Necessaire.Models.Branding
@inject HRazorApp hRazorApp
@code {
    protected HRazorApp App => hRazorApp ?? HRazorApp.Default;
    protected BrandingStyle Branding => App?.Branding ?? HRazorAppBranding.Default;
    protected int SizingUnit => App?.Branding?.SizingUnitInPixels ?? HRazorAppBranding.Default.SizingUnitInPixels;
    protected T Get<T>() => App.DependencyRegistry.Get<T>();
    protected T Build<T>(string id) where T : class => App.DependencyRegistry.Build<T>(id);
}
