@using H.Necessaire.Runtime.UI.Razor.Elements
@inherits Abstracts.HRazorComponentBase

<div class="h-necessaire @nameof(HDefaultChrome)" style="width: 100%; height: 100%; display: flex; flex-direction: column;">

    @if(Header is not null)
    {
        @Header
    }
    else
    {
        <HBrandingHeader>
            <Content>
                <h1>H Razor App</h1>
            </Content>
        </HBrandingHeader>
    }

</div>

@code {
    [Parameter] public RenderFragment Header { get; set; }
    [Parameter] public RenderFragment Content { get; set; }
}
